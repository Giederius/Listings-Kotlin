<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="32dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dialogPill"
        android:layout_width="50dp"
        android:layout_height="6dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/bg_rounded_rect_sm_borderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_dialog_rounded_top"
        app:layout_constraintTop_toBottomOf="@id/dialogPill">

        <TextView
            android:id="@+id/addCardTitle"
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/common.addCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_rounded_rect_sm_borderless"
            android:backgroundTint="@color/warmGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addCardTitle" />

        <ImageView
            android:id="@+id/cardTypeImg"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_visa"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/cardContainer"
            app:layout_constraintTop_toTopOf="@id/cardContainer" />

        <TextView
            android:id="@+id/cardTypeTitle"
            style="@style/H4.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="VISA"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/cardContainer"
            app:layout_constraintTop_toTopOf="@id/cardContainer" />

        <TextView
            android:id="@+id/cardNumber"
            style="@style/H4.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="**** **** **** ****"
            app:layout_constraintBottom_toTopOf="@id/cardUserName"
            app:layout_constraintStart_toStartOf="@id/cardContainer" />

        <TextView
            android:id="@+id/cardUserName"
            style="@style/H4.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:text="NAME"
            app:layout_constraintBottom_toBottomOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="@id/cardContainer" />

        <TextView
            android:id="@+id/cardExpDate"
            style="@style/H4.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/addCardDialog.cardExpDate"
            app:layout_constraintBottom_toBottomOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="@id/cardContainer" />

        <TextView
            android:id="@+id/textInputLabel"
            style="@style/H4.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/addCardDialog.cardNumber"
            android:textColor="@color/accentPurple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardContainer" />

        <EditText
            android:id="@+id/addCardNumberTextEdit"
            style="@style/RegularTextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp"
            android:hint="@string/addCardDialog.addYourCardNumbers"
            android:inputType="phone"
            android:nextFocusForward="@id/addCardNameTextEdit"
            android:maxLength="19"
            android:textColorHighlight="@color/accentPurple"
            app:layout_constraintTop_toBottomOf="@id/textInputLabel" />

        <EditText
            android:id="@+id/addCardNameTextEdit"
            style="@style/RegularTextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp"
            android:hint="@string/addCardDialog.nameOnCard"
            android:inputType="text"
            android:textColorHighlight="@color/accentPurple"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textInputLabel" />

        <EditText
            android:id="@+id/addCardExpDateTextEdit"
            style="@style/RegularTextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp"
            android:hint="@string/addCardDialog.cardExpiration"
            android:inputType="number"
            android:maxLength="4"
            android:textColorHighlight="@color/accentPurple"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textInputLabel" />

        <EditText
            android:id="@+id/addCardSecurityTextEdit"
            style="@style/RegularTextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp"
            android:hint="@string/addCardDialog.securityCode"
            android:inputType="number"
            android:maxLength="3"
            android:textColorHighlight="@color/accentPurple"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textInputLabel" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

