<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="14dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/suggestionCategoryImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/sample_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCornerShape" />

    <TextView
        android:id="@+id/suggestionCategoryTitle"
        style="@style/H4.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Woman dress"
        app:layout_constraintStart_toEndOf="@id/suggestionCategoryImg"
        app:layout_constraintTop_toTopOf="@id/suggestionCategoryImg" />

    <TextView
        android:id="@+id/suggestionCategoryDescription"
        style="@style/H5.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Woman dress"
        app:layout_constraintBottom_toBottomOf="@id/suggestionCategoryImg"
        app:layout_constraintStart_toEndOf="@id/suggestionCategoryImg" />

</androidx.constraintlayout.widget.ConstraintLayout>