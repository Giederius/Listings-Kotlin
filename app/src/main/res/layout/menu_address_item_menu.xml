<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_rect_sm_borderless">

    <TextView
        android:id="@+id/menuEditAddress"
        style="@style/H4.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile.addresses.editAddress" />

    <TextView
        android:id="@+id/menuDeleteAddress"
        style="@style/H4.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/profile.addresses.deleteAddress"
        android:textColor="@color/highlightRed" />

</androidx.appcompat.widget.LinearLayoutCompat>