<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="homeTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/item_dot_selector</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:width">4dp</item>
        <item name="tabSelectedTextColor">@color/normalTextColor</item>
        <item name="tabTextColor">@color/grayedOutTextColor</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="homeTabStyle" parent="TextAppearance.Design.Tab">
        <item name="font">@font/raleway_bold</item>
        <item name="android:textColor">@color/grayedOutTextColor</item>
    </style>

    <style name="circularShape">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>