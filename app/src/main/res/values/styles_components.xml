<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="homeTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/item_dot_selector</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:width">4dp</item>
        <item name="tabSelectedTextColor">@color/normalTextColor</item>
        <item name="tabTextColor">@color/grayedOutTextColor</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="homeTabStyle" parent="TextAppearance.Design.Tab">
        <item name="font">@font/raleway_bold</item>
        <item name="android:textColor">@color/grayedOutTextColor</item>
    </style>

    <style name="circularShape">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCornerShape">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="BasePopUpMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="background">@drawable/bg_rounded_rect_sm_borderless</item>
        <item name="backgroundColor">@color/warmYellow</item>
        <item name="android:textAppearance">@style/H4.Bold</item>
        <item name="android:textColor">@color/highlightRed</item>
    </style>

    <style name="ListingsBorderedButton">
        <item name="background">@drawable/bg_rounded_rect_sm_border</item>
        <item name="android:foreground">@android:color/white</item>
        <item name="rippleColor">@color/warmPurple</item>
        <item name="android:textColor">@color/highlightRed</item>
    </style>

    <style name="ListingsSearchField" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/bg_rounded_rect_sm_borderless</item>
        <item name="backgroundColor">@color/grayedOutTextColor</item>
    </style>

    <style name="AppRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_radio_button_selector</item>
        <item name="android:drawableEnd">@drawable/radio_button_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/normalTextColor</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

</resources>