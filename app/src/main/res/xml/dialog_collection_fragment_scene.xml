<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/normalTextColor" />
        <Constraint
            android:id="@id/searchBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:alpha="1"
            android:padding="12dp"
            android:src="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/collectionTitle"
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:alpha="1"
            android:text="Dresses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backBtn" />
        <Constraint
            android:id="@id/collectionSize"
            style="@style/H4.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:text="250 products"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/collectionTitle" />
        <Constraint
            android:id="@id/sortBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:alpha="1"
            android:src="@drawable/ic_sort"
            app:hasBorder="true"
            app:layout_constraintEnd_toStartOf="@id/filterBtn"
            app:layout_constraintStart_toStartOf="@id/collectionSize"
            app:layout_constraintTop_toBottomOf="@id/collectionSize" />
        <Constraint
            android:id="@id/filterBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:alpha="1"
            android:src="@drawable/ic_filter"
            app:hasBorder="true"
            app:layout_constraintEnd_toEndOf="@id/collectionSize"
            app:layout_constraintStart_toEndOf="@id/sortBtn"
            app:layout_constraintTop_toBottomOf="@id/collectionSize" />

        <Constraint
            android:id="@+id/tabLayout"
            style="@style/homeTabLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sortBtn"
            app:tabTextAppearance="@style/homeTabStyle" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:alpha="0"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/normalTextColor" />
        <Constraint
            android:id="@id/searchBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:alpha="0"
            android:visibility="gone"
            android:padding="12dp"
            android:src="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/collectionTitle"
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:alpha="0"
            android:visibility="gone"
            android:text="Dresses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backBtn" />
        <Constraint
            android:id="@id/collectionSize"
            style="@style/H4.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0"
            android:text="250 products"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/collectionTitle" />
        <Constraint
            android:id="@id/sortBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:alpha="0"
            android:visibility="gone"
            android:src="@drawable/ic_sort"
            app:hasBorder="true"
            app:layout_constraintEnd_toStartOf="@id/filterBtn"
            app:layout_constraintStart_toStartOf="@id/collectionSize"
            app:layout_constraintTop_toBottomOf="@id/collectionSize" />
        <Constraint
            android:id="@id/filterBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:alpha="0"
            android:visibility="gone"
            android:src="@drawable/ic_filter"
            app:hasBorder="true"
            app:layout_constraintEnd_toEndOf="@id/collectionSize"
            app:layout_constraintStart_toEndOf="@id/sortBtn"
            app:layout_constraintTop_toBottomOf="@id/collectionSize" />

        <Constraint
            android:id="@+id/tabLayout"
            style="@style/homeTabLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabTextAppearance="@style/homeTabStyle" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="300" >
        <OnSwipe app:dragDirection="dragUp"/>
    </Transition>

    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@+id/end"
        app:duration="300" >
        <OnSwipe app:dragDirection="dragDown"/>
    </Transition>
</MotionScene>
