<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/search" />

    <ConstraintSet android:id="@+id/suggestions">
        <Constraint
            android:id="@id/recentSearchesTitle"
            android:visibility="gone" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/results">
        <Constraint
            android:id="@+id/searchField"
            style="@style/ListingsSearchField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_rounded_rect_sm_borderless"
            android:backgroundTint="@color/neutralLight"
            android:hint="@string/search.hint"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textCursorDrawable="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backBtn" />
        <Constraint
            android:id="@id/resultSortBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:alpha="1"
            android:src="@drawable/ic_sort"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/backBtn"
            app:layout_constraintEnd_toStartOf="@id/resultFilterBtn"
            app:layout_constraintTop_toTopOf="@id/backBtn" />
        <Constraint
            android:id="@id/resultFilterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:alpha="1"
            android:src="@drawable/ic_filter"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/backBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/backBtn" />

        <Constraint
            android:id="@+id/searchResultViewPagerTabLayout"
            style="@style/homeTabLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchField"
            app:tabTextAppearance="@style/homeTabStyle" />

        <Constraint
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/searchButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_search"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="@id/searchField"
            app:layout_constraintEnd_toEndOf="@id/searchField"
            app:layout_constraintTop_toTopOf="@id/searchField" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/onScrollDown">
                <Constraint
            android:id="@+id/searchField"
            style="@style/ListingsSearchField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:alpha="0"
            android:background="@drawable/bg_rounded_rect_sm_borderless"
            android:backgroundTint="@color/neutralLight"
            android:hint="@string/search.hint"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textCursorDrawable="@null"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backBtn" />
        <Constraint
            android:id="@id/resultSortBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:alpha="0"
            android:src="@drawable/ic_sort"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/backBtn"
            app:layout_constraintEnd_toStartOf="@id/resultFilterBtn"
            app:layout_constraintTop_toTopOf="@id/backBtn" />
        <Constraint
            android:id="@id/resultFilterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:alpha="0"
            android:src="@drawable/ic_filter"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/backBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/backBtn" />

        <Constraint
            android:id="@+id/searchResultViewPagerTabLayout"
            style="@style/homeTabLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabTextAppearance="@style/homeTabStyle" />

        <Constraint
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:alpha="0"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/searchButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:alpha="0"
            android:background="@drawable/ic_search"
            android:padding="4dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/searchField"
            app:layout_constraintEnd_toEndOf="@id/searchField"
            app:layout_constraintTop_toTopOf="@id/searchField" />

    </ConstraintSet>

    <Transition
        android:id="@+id/fromSearchToSuggestions"
        app:constraintSetEnd="@id/suggestions"
        app:constraintSetStart="@id/search" />

    <Transition
        android:id="@+id/fromSuggestionsToResult"
        app:constraintSetEnd="@id/results"
        app:constraintSetStart="@id/suggestions" />

    <Transition
        android:id="@+id/fromSearchToResult"
        app:constraintSetEnd="@id/results"
        app:constraintSetStart="@id/search"
        app:duration="500"
        app:motionInterpolator="easeOut" />

    <Transition
        android:id="@+id/fromResultToOnScroll"
        app:constraintSetEnd="@id/onScrollDown"
        app:constraintSetStart="@id/results"
        app:duration="500"
        app:motionInterpolator="easeOut" />

</MotionScene>
